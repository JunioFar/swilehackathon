<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SwileEditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">16dp</item>
        <item name="android:textColorHint">#666666</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/edit_text_rounded</item>
    </style>

    <style name="DefaultRoundedButtonStyle">
        <item name="android:background">@drawable/default_button_state</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DefaultRoundedButton">
        <item name="android:background">@drawable/default_button_state</item>
        <item name="android:textSize">@dimen/button_default_text_size</item>
        <item name="android:paddingTop">@dimen/button_default_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/button_default_padding_vertical</item>
        <item name="android:paddingStart">@dimen/button_default_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/button_default_padding_horizontal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <dimen name="button_default_text_size">8dp</dimen>
    <dimen name="button_default_padding_vertical">8dp</dimen>
    <dimen name="button_default_padding_horizontal">8dp</dimen>
</resources>